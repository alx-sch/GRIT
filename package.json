{
  "name": "grit",
  "version": "1.0.0",
  "private": true,
  "description": "Social Network Event WebApp",
  "type": "module",

  "scripts": {
    "dev": "pnpm run \"/^dev:.*/\"",
    "dev:fe": "vite",
    "dev:be": "nest start --watch",

    "build": "pnpm run \"/^dev:.*/\"",
    "build:fe": "vite build",
    "build:be": "nest build",

    "preview": "vite preview",
    "start": "node dist-be/main.js",

    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },

  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.0",
    "@nestjs/websockets": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.0.0",
    "socket.io": "^4.7.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",

    "@fastify/cors": "^10.0.0",
    "dotenv": "^16.4.0",
    "zod": "^3.23.0",

    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^6.16.0",
    "socket.io-client": "^4.7.0",
    "zustand": "^4.5.0",
    "axios": "^1.6.0"
  },

  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",

    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.2.0",
    "vitest": "^0.32.0",

    "tailwindcss": "3.4.19",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",

    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",

    "@eslint/js": "^9.9.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "prettier": "^3.0.0",
    "typescript-eslint": "^8.2.0",

    "typescript": "^5.2.0"
  },

  "engines": {
    "node": ">=20"
  }

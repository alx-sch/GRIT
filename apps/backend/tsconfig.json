{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "incremental": true,
    "experimentalDecorators": true,
    "preserveWatchOutput": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/tests/**/*", "prisma/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
